<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="form"
            type="com.breeze.googlemapjava.roomdb.FormEntity" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Name :"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/rName"
                    android:text="@{form.name}">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Email ID :"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/rEmail"
                    android:text="@{form.email}">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Latitude :"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/rLatitude"
                    android:text="@{form.latitude}">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Longitude :"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:id="@+id/rLongitude"
                    android:text="@{form.longitude}">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="Address :"
                    android:fontFamily="sans-serif-black">
                </TextView>

                <TextView
                    android:layout_marginStart="150dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:id="@+id/rAddress"
                    android:text="@{form.address}">
                </TextView>

            </RelativeLayout>
<!--            <RelativeLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="fill_horizontal">-->


<!--                <ImageView-->
<!--                    android:layout_marginStart="30dp"-->
<!--                    android:layout_width="75dp"-->
<!--                    android:layout_height="75dp"-->
<!--                    android:src="@drawable/ic_edit_icon"-->
<!--                    android:id="@+id/editDetails"/>-->

<!--                <ImageView-->
<!--                    android:layout_alignParentEnd="true"-->
<!--                    android:layout_width="75dp"-->
<!--                    android:layout_height="75dp"-->
<!--                    android:src="@drawable/ic_delete_icon"-->
<!--                    android:id="@+id/deleteDetails"/>-->

<!--            </RelativeLayout>-->
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>